<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Add your house details views here -->
        <TextView
            android:id="@+id/recipe_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <TextView
            android:id="@+id/recipe_calories_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calories" />

        <TextView
            android:id="@+id/recipe_instructions_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions" />

        <TextView
            android:id="@+id/recipe_ingredients_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients" />

        <!-- Add a LinearLayout for additional content within the CardView -->
        <LinearLayout
            android:id="@+id/recipe_ingredients_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>